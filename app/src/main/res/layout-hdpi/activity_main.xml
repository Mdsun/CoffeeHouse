<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLime"
    android:orientation="vertical"
    tools:context="com.example.sun.coffeehouse.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="Coffee1"
            android:paddingTop="10dp"
            android:text="Black Coffee"
            android:textSize="32sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="10/-"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="Coffee1"
            android:paddingTop="10dp"
            android:text="Cold Coffee"
            android:textSize="34sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp"
            android:text="40/-"
            android:textSize="34sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="Coffee1"
            android:paddingTop="10dp"
            android:text="ColdChokolet Coffee"
            android:textSize="22sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:text="50/-"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="Coffee1"
            android:paddingTop="10dp"
            android:text="ColdVaneela Coffee"
            android:textSize="23sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="9dp"
            android:text="50/-"
            android:textSize="26sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="Coffee1"
            android:paddingTop="10dp"
            android:text="Milk Sheck"
            android:textSize="37sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="30/-"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/c1" />

    </LinearLayout>
</LinearLayout>
