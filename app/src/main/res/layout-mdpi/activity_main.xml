<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLime"
    android:orientation="vertical"
    tools:context="com.example.sun.coffeehouse.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:paddingTop="20dp"
            android:text="Black Coffee"
            android:textSize="36sp"
            android:textStyle="italic"
            android:onClick="Coffee1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:text="10/-"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:paddingTop="20dp"
            android:text="Cold Coffee"
            android:textSize="36sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="19dp"
            android:text="40/-"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="85dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:paddingTop="20dp"
            android:text="ColdChoklet Coffee"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:text="50/-"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:paddingTop="20dp"
            android:text="ColdVanilaCoffee"
            android:textSize="28sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:text="50/-"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/colorWhiteGreen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coffee5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:paddingTop="20dp"
            android:text="Milk Skeek"
            android:textSize="36sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:text="30/-"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/c1" />

    </LinearLayout>
</LinearLayout>
